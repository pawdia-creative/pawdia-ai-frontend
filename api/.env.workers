# Cloudflare Workers Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=production
CLIENT_URL=https://pawdia-ai-frontend.pages.dev
JWT_SECRET=your-super-secret-jwt-key-here

# Database (Cloudflare D1)
# Database binding is configured in wrangler.toml

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@yourdomain.com

# Payment Services
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=live # or "live" for production

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-admin-password

# Cloudflare Workers Specific
# These are set via wrangler secret put or in wrangler.toml
# DB (D1 Database binding) - configured in wrangler.toml