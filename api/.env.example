# Pawdia AI API Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# JWT Configuration (REQUIRED)
# Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:8080

# Database Configuration
# For Cloudflare D1, database is configured in wrangler.toml
# For local development, you may use SQLite

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@pawdia-ai.com
APP_URL=http://localhost:8080

# Payment Services
# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Stripe (optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AI Service (optional, if using external AI API)
AI_API_KEY=your-ai-api-key
AI_API_BASE_URL=https://api.example.com/v1
